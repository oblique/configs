[colors]
background = #101010
foreground = #606060

focused = #a78edb
urgent = #d81860
mode = #d81860

cpu = #2ecc71
memory = #a78edb
backlight = #90b1b1
network = #5f87ff
pulseaudio = #8787ff
pulseaudio-muted = #d81860
temperature = #ff5f87
temperature-critical = #d81860

[bar/top]
monitor = ${env:MONITOR:eDP-1}
dpi = ${xrdb:Xft.dpi}

width = 100%
height = ${env:HEIGHT:2%}
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Hermit:size=11;4
font-1 = "Font Awesome 5 Free:style=Solid:size=11;3"

modules-left = i3
modules-center =
modules-right = pulseaudio wlan eth cpu memory temperature backlight battery date

tray-position = ${env:TRAY_POSITION:right}
tray-maxsize = ${env:TRAY_MAXSIZE:100%}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; mode
label-mode-foreground = ${colors.mode}
label-mode-background = ${colors.background}
label-mode-padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = #000000
label-focused-background = ${colors.focused}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.focused}
label-visible-background = ${colors.background}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.urgent}
label-urgent-background = ${colors.background}
label-urgent-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label> <ramp>
format-foreground = ${colors.backlight}
label = %percentage%%

ramp-0 = 
ramp-1 = 

[module/cpu]
type = internal/cpu
interval = 2
format-foreground = ${colors.cpu}
format-suffix = " "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-foreground = ${colors.memory}
format-suffix = " "
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = ${env:WLAN_IFACE:wlp4s0}
interval = 3.0

format-connected-foreground = ${colors.network}
format-connected-suffix = " "
label-connected = %essid% (%signal%%) %local_ip%

[module/eth]
type = internal/network
interface = ${env:ETH_IFACE:enp0s31f6}
interval = 3.0

format-connected-foreground = ${colors.network}
format-connected-suffix = " "
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 1

date =
date-alt = %Y-%m-%d

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-foreground = ${colors.pulseaudio}
format-volume = <label-volume> <ramp-volume>
label-volume = %percentage%%

label-muted = 
label-muted-foreground = ${colors.pulseaudio-muted}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

click-right = pavucontrol &

[module/battery]
type = custom/script
exec = polybar-custom-modules battery
tail = true

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80

format = <label> <ramp>
format-foreground = ${colors.temperature}
format-warn = <label-warn> <ramp>
format-warn-foreground = ${colors.temperature-critical}

label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

